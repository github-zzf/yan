<div class="xwindow" id="sysConfig_win">
	<div class="cover"></div>
	<div class="xbox">
		<div class="title">参数配置表单</div>
		<form class="xform" id="sysConfig_form" method="post" autocomplete="off">			
			<input type="hidden" name="id"/>
			<div class="xgroup">
				<label class="g1">名称</label>
				<div class="g2"><input type="text" name="configName" class="readonly" readonly="readonly" style="width:260px"/></div>
			</div>
			<div class="xgroup">
				<label class="g1">说明</label>
				<div class="g2"><input type="text" name="remark" class="readonly" readonly="readonly" style="width:260px"/></div>
			</div>
			<div class="xgroup">
				<label class="g1">值<i>*</i></label>
				<div class="g2"><input type="text" name="configValue" style="width:260px"/></div>
			</div>
		</form>
		<div class="bottombar">
			<span class="xbtn" id="btn_submit">保存</span><span class="xbtn xclose">取消</span>
		</div>
	</div>
</div>
<script type="text/javascript">
app.win = $('#sysConfig_win').xwindow({width:500,height:350,open:false});
app.form = $('#sysConfig_form').xform({
	url : adminPath + '/sysConfig/save',
	xbtn:'#btn_submit',
	xcheck:[
		{label:'值', name:'configValue', xcheck:'null'},
	],
	success:function(e){
		if(e.code==1){
			app.table.reload();
			app.win.close();
			$.ok('操作成功');
		}else {
			$.xalert(e.msg);
		}
	}
});
</script>