<!DOCTYPE html>
<html>
	<#include "/common/_admin.html">
	<#include "/common/__webupload.html">
	<#include "/common/__ztree.html">
	<script type="text/javascript" src="${ctx}/static/module/shop/goods.js?${v}"></script>
<body>
	<div class="main_body">
		<div class="main_title main_title_border">
			<span class="content_titel"><b class="top_icon">消费项目</b></span>
		</div>
		<div class="main_content main_change">
			<form class="xform search_box" id="form_search">
				<div class="xgroup">
					<label class="label">分类</label>
					<input type="text" class="xw2" autocomplete="off" id="sf_typeName"/>
					<input type="hidden" name="typeId" id="sf_typeId"/>
				</div>
				<div class="xgroup">
					<label class="label">产品名称</label>
					<input type="text" name="name" class="xw2" autocomplete="off"/>
				</div>
				<div class="xgroup">
					<label class="label">是否上架</label>
					<div class="xcombo" data-name="isShow" id="sf_isShow">
				  		<ul class="xtemplate">
					   		<li data-xv="{val}">{txt}</li>
					   	</ul>
				  	</div>
				</div>
				<div class="clear"></div>
				<div class="xgroup">
					<label class="label">&nbsp;</label>
					<button type="button" class="xbtn" id="btn_search">查询</button>
					<button type="button" class="xbtn" id="btn_reset">重置</button>
					<@shiro.hasPermission name="shop:goods:edit">
					<button type="button" class="xbtn" id="btn_add"><b class="icon_add icon_all">添加</b></button>
					</@shiro.hasPermission>
				</div>
				<div class="clear"></div>
			</form>
			<div class="body_center">
		
				<div class="xtable" id="goods_xtable" style="width:1200px;">
					<table class="xhead">
						<tr>
							<th width="80px">操作</th>
							<th width="150px">分类</th>
							<th>产品名称</th>
							<th width="100px">销售价格</th>
							<th width="80px">是否上架</th>
							<th width="80px">排序</th>
							<th width="150px">更新者</th>
							<th width="150px">更新时间</th>
						</tr>
					</table>
					<div class="xbody">
						<table>
							<tbody class="xtemplate">
								<tr>
									<td class="tc">
									<@shiro.hasPermission name="shop:goods:edit">
									{btnUpdate}{btnDelete}
									</@shiro.hasPermission>
									</td>
									<td>{typeName}</td>
									<td>{name}</td>
									<td>{price}</td>
									<td>{isShowName}</td>
									<td>{sort}</td>
									<td>{updateName}</td>
									<td>{updateTime}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<#assign cls="goods_paging">
			<#include "/common/_paging.html">
		</div>
	</div>
	<#include "goodsForm.html">
	<#include "../link/tree_goodsType.html">
</body>
</html>