<!DOCTYPE html>
<html>
	<#include "/common/_admin.html">
	<script type="text/javascript" src="${ctx}/static/module/company/comConfig.js?${v}"></script>
<body>
	<div class="main_body">
		<div class="main_title main_title_border">
			<span class="content_titel"><b class="top_icon">参数配置</b></span>
		</div>
		<div class="main_content main_change">
			<form class="xform search_box" autocomplete="off" id="form_search">
				<div class="xgroup">
					<label class="label">查询参数名称</label>
					<input type="text" name="name" class="xw2"/>
				</div>
				<div class="clear"></div>
				<div class="xgroup">
					<label class="label">&nbsp;</label>
					<button type="button" class="xbtn" id="btn_search">查询</button>
					<button type="button" class="xbtn" id="btn_reset">重置</button>
					<button type="button" class="xbtn" id="btn_add"><b class="icon_add icon_all">添加</b></button>
				</div>
				<div class="clear"></div>
			</form>
			<div class="body_center">
		
				<div class="xtable" id="comConfig_xtable" style="min-width:1000px;">
					<table class="xhead">
						<tr>
							<th class="ck"><input type="checkbox" class="xcheckbox"/></th>
							<th width="80px">操作</th>
							<th>参数名称</th>
							<th>参数key</th>
							<th>参数值</th>
							<th>参数类型（text/img/json/jsonObj/post/get）</th>
							<th>自动加载（0否、1是）</th>
							<th>参数说明</th>
							<th>更新者</th>
							<th>更新时间</th>
						</tr>
					</table>
					<div class="xbody">
						<table>
							<tbody class="xtemplate">
								<tr>
									<td class="ck"><input type="checkbox" class="xcheckrow" data-xv="{id}"/></td>
									<td class="tc">{btnUpdate}{btnDelete}</td>
									<td>{cName}</td>
									<td>{cKey}</td>
									<td>{cValue}</td>
									<td>{cType}</td>
									<td>{cLoad}</td>
									<td>{remark}</td>
									<td>{updateId}</td>
									<td>{updateTime}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<#assign cls="comConfig_paging">
			<#include "/common/_paging.html">
		</div>
	</div>
	<#include "comConfigForm.html">
	
</body>
</html>