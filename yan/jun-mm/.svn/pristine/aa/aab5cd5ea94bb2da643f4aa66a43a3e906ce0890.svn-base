<!DOCTYPE html>
<html>
	<#include "/common/_admin.html">
	<script type="text/javascript" src="${ctx}/static/module/company/comTemplate.js?${v}"></script>
<body>
	<div class="main_body">
		<div class="main_title main_title_border">
			<span class="content_titel"><b class="top_icon">企业模板消息</b></span>
		</div>
		<div class="main_content main_change">
			<form class="xform search_box" autocomplete="off" id="form_search">
				<div class="xgroup">
					<label class="label">查询参数名称</label>
					<input type="text" name="name" class="xw2"/>
				</div>
				<div class="clear"></div>
				<div class="xgroup">
					<label class="label">&nbsp;</label>
					<button type="button" class="xbtn" id="btn_search">查询</button>
					<button type="button" class="xbtn" id="btn_reset">重置</button>
				</div>
				<div class="clear"></div>
			</form>
			<div class="body_center">
		
				<div class="xtable" id="comTemplate_xtable" style="min-width:1000px;">
					<table class="xhead">
						<tr>
							<th class="ck"><input type="checkbox" class="xcheckbox"/></th>
							<th width="80px">操作</th>
							<th width="380px">模板ID</th>
							<th width="100px">模板名称</th>
							<th>详细内容</th>
						</tr>
					</table>
					<div class="xbody">
						<table>
							<tbody class="xtemplate">
								<tr>
									<td class="ck"><input type="checkbox" class="xcheckrow" data-xv="{id}"/></td>
									<td class="tc">{btnUpdate}{btnDelete}</td>
									<td>{tplId}</td>
									<td>{tplName}</td>
									<td><pre>{remark}</pre></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<#assign cls="comTemplate_paging">
			<#include "/common/_paging.html">
		</div>
	</div>
	<#include "comTemplateForm.html">
	
</body>
</html>