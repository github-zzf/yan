<!DOCTYPE html>
<html>
	<#include "/common/_admin.html">
	<script type="text/javascript" src="${ctx}/static/module/member/cardChange.js?${v}"></script>
<body>
	<div class="main_body">
		<div class="main_title main_title_border">
			<span class="content_titel"><b class="top_icon">账目明细</b></span>
		</div>
		<div class="main_content main_change">
			<form class="xform search_box" id="form_search" autocomplete="off">
				<div class="xgroup">
					<label class="label">会员姓名</label>
					<input type="text" name="memberName" class="xw2"/>
				</div>
				<div class="xgroup">
					<label class="label">会员电话</label>
					<input type="text" name="memberPhone" class="xw2"/>
				</div>
				<div class="xgroup">
					<label class="label">会员卡</label>
					<div class="xcombo" data-name="cardId" id="sf_cardId">
				  		<ul class="xtemplate">
					   		<li data-xv="{id}">{name}</li>
					   	</ul>
				  	</div>
				</div>
				<div class="xgroup">
					<label class="label">类型</label>
					<div class="xcombo" data-name="type" id="sf_type">
				  		<ul class="xtemplate">
					   		<li data-xv="{val}">{txt}</li>
					   	</ul>
				  	</div>
				</div>
				<div class="clear"></div>
				<div class="xgroup">
					<label class="label">&nbsp;</label>
					<button type="button" class="xbtn" id="btn_search">查询</button>
					<button type="button" class="xbtn" id="btn_reset">重置</button>
				</div>
				<div class="clear"></div>
			</form>
			<div class="body_center">
		
				<div class="xtable" id="cardChange_xtable" style="width:1000px;">
					<table class="xhead">
						<tr>
							<th>会员姓名</th>
							<th>会员电话</th>
							<th>会员卡名称</th>
							<th width="80px">类型</th>
							<th width="80px">金额/次数</th>
							<th width="80px">余额</th>
							<th width="150px">更新者</th>
							<th width="150px">更新时间</th>
						</tr>
					</table>
					<div class="xbody">
						<table>
							<tbody class="xtemplate">
								<tr>
									<td>{memberName}</td>
									<td>{memberPhone}</td>
									<td>{cardName}</td>
									<td>{typeName}</td>
									<td>{storedNum}{typeLabel}</td>
									<td>{storedNew}{typeLabel}</td>
									<td>{updateName}</td>
									<td>{updateTime}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<#assign cls="cardChange_paging">
			<#include "/common/_paging.html">
		</div>
	</div>
	<#include "cardChangeForm.html">
	<#include "../link/link_member.html">
</body>
</html>