<div class="xwindow" id="link_goodsType">
	<div class="cover"></div>
	<div class="xbox">
		<div class="title">上级分类<span class="title_close xclose">X</span></div>
		<form class="xform search_box" id="link_goodsType_form">
			<div class="xgroup">
				<input type="text" name="search" class="xw2" autocomplete="off" placeholder="关键字" id="f_search"/>
			</div>
			<div class="xgroup">
				<button type="button" class="xbtn" id="btn_link_goodsType_search">
					<b class="icon_search icon_all">查询</b>
				</button>
				<button type="button" class="xbtn" id="btn_link_goodsType_reset">
					<b class="icon_reast icon_all">重置</b>
				</button>
			</div>
			<div class="clear"></div>
            <input style="display:none" type="text">
		</form>
	    <div id="demoTree_tree" class="ztree" style="width:300px"></div>
	</div>
	
</div>
<script>
var linkGoodsType = {
	callBack:function(row){},
	init:function(){
		linkGoodsType.bind();
		linkGoodsType.load();
	},
	bind:function(){
		var sf = $("#link_goodsType_form").xform();
		$("#btn_link_goodsType_search").xbtn(function(btn){
			var data = sf.getData();
			linkGoodsType.table.reload(data);
		});
		$("#btn_link_goodsType_reset").xbtn(function(btn){
			sf.clear();
			var data = sf.getData();
			linkGoodsType.table.reload(data);
		});
		$('#f_search').bind('keyup', function(event) {
	        if (event.keyCode == "13") {
				var data = sf.getData();
				linkGoodsType.table.reload(data);
	        }
	    });
		$('#link_goodsType').on("click",".js_link_goodsType_sel", function(btn){
			var index = btn.xv;
			var row = linkGoodsType.table.getRow(index);
			linkGoodsType.callBack(row);
			linkGoodsType.win.close();
		});
	},
	load:function(){
		linkGoodsType.win = $('#link_goodsType').xwindow({width:360,height:500,open:false});
		$.ztree({
			id:"demoTree_tree",
			url:adminPath + '/list/treeGoodsTypeData',
			click:function(treeId, treeNode){
				linkGoodsType.win.close();
				linkGoodsType.callBack(treeId, treeNode);
			}
		})
	},
	open:function(callBack){
		linkGoodsType.callBack = callBack;
		linkGoodsType.win.open();
	}
}
linkGoodsType.init();
</script>