# Web 相关
web:

  # MVC 拦截器
  interceptor:
    
    # 后台管理日志记录拦截器
    log:
      enabled: true
      addPaths: >
        ${adminPath}/**
      excludePaths: >
        ${adminPath}/index,
        ${adminPath}/login,
        ${adminPath}/desktop,
        ${adminPath}/combo/**,
        ${adminPath}/tags/*,
        ${adminPath}/msg/**
    com:
      addPaths: >
        ${mobilePath}/**
      excludePaths: >
        ${mobilePath}/wx/getUserInfo/**
    mobile:
      addPaths: >
        ${mobilePath}/**
      excludePaths: >
        ${mobilePath}/wx/**
