<!DOCTYPE html>
<html>
	<#include "/common/_admin.html">
	<script type="text/javascript" src="${ctx}/static/module/cms/articles.js?${v}"></script>
<body>
	<div class="main_body">
		<div class="main_title main_title_border">
			<span class="content_titel"><b class="top_icon">文章表</b></span>
		</div>
		<div class="main_content main_change">
			<form class="xform search_box" autocomplete="off" id="form_search">
				<div class="xgroup">
					<label class="label">查询参数名称</label>
					<input type="text" name="name" class="xw2"/>
				</div>
				<div class="clear"></div>
				<div class="xgroup">
					<label class="label">&nbsp;</label>
					<button type="button" class="xbtn" id="btn_search">查询</button>
					<button type="button" class="xbtn" id="btn_reset">重置</button>
					<button type="button" class="xbtn" id="btn_add"><b class="icon_add icon_all">添加</b></button>
				</div>
				<div class="clear"></div>
			</form>
			<div class="body_center">
		
				<div class="xtable" id="articles_xtable" style="min-width:1000px;">
					<table class="xhead">
						<tr>
							<th class="ck"><input type="checkbox" class="xcheckbox"/></th>
							<th width="80px">操作</th>
							<th>栏目ID</th>
							<th>文章排序</th>
							<th>文章标题</th>
							<th>内容</th>
							<th>封面图片</th>
							<th>发布日期</th>
							<th>点击次数</th>
							<th>更新者</th>
							<th>更新时间</th>
						</tr>
					</table>
					<div class="xbody">
						<table>
							<tbody class="xtemplate">
								<tr>
									<td class="ck"><input type="checkbox" class="xcheckrow" data-xv="{id}"/></td>
									<td class="tc">{btnUpdate}{btnDelete}</td>
									<td>{typeId}</td>
									<td>{sort}</td>
									<td>{title}</td>
									<td>{body}</td>
									<td>{img}</td>
									<td>{sendTime}</td>
									<td>{clicks}</td>
									<td>{updateId}</td>
									<td>{updateTime}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<#assign cls="articles_paging">
			<#include "/common/_paging.html">
		</div>
	</div>
	<#include "articlesForm.html">
	
</body>
</html>